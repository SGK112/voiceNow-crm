# Server
PORT=5001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# MongoDB
MONGODB_URI=mongodb://localhost:27017/voiceflow-crm

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-here

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=your-twilio-phone-number-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Shopify OAuth
# Create app at https://partners.shopify.com
SHOPIFY_CLIENT_ID=your-shopify-client-id-here
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret-here

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=YourApp Name

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# TTS Configuration (Text-to-Speech)
# Provider options: elevenlabs, xtts, runpod, piper
TTS_PROVIDER=elevenlabs
TTS_FALLBACK_PROVIDER=elevenlabs
TTS_DEFAULT_VOICE=aria

# Self-hosted XTTS v2 (if using xtts provider)
# Deploy using: cd docker/xtts && docker-compose up -d
XTTS_API_URL=http://localhost:8000

# RunPod Serverless (RECOMMENDED - pay per use)
# 1. Create account at https://runpod.io
# 2. Build and push: cd docker/runpod-xtts && docker build -t yourusername/xtts-runpod . && docker push
# 3. Create serverless endpoint in RunPod dashboard
# 4. Copy endpoint URL and API key below
RUNPOD_ENDPOINT_URL=https://api.runpod.ai/v2/YOUR_ENDPOINT_ID
RUNPOD_API_KEY=your-runpod-api-key-here

# Self-hosted Piper (if using piper provider - fast but lower quality)
PIPER_API_URL=http://localhost:5500

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Google Cloud (Vertex AI)
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Default AI Model
DEFAULT_AI_MODEL=gpt-4-turbo

# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_URL=http://5.183.8.119:5678
N8N_API_KEY=your-n8n-api-key-here
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# Webhook Secrets for Signature Verification
ELEVENLABS_WEBHOOK_SECRET=your-elevenlabs-webhook-secret-here
WEBHOOK_URL=https://yourdomain.com

# Slack
SLACK_BOT_TOKEN=your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# Cloudinary (for image/file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name-here
CLOUDINARY_API_KEY=your-cloudinary-api-key-here
CLOUDINARY_API_SECRET=your-cloudinary-api-secret-here
